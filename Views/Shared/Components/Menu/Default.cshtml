@model List<ResultMenuDto>

<section class="section" id="menu">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="section-heading">
                    <h6>Menümüz</h6>
                    <h2>Her Yudumda Keyif, Her Lokmada Mutluluk!</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="menu-item-carousel">
        <div class="col-lg-12">
            <div class="owl-menu-item owl-carousel">
                
                @foreach (var item in Model)
                {
                    <div class="item">
                        <div class='card card1' style="background-image: url(@item.MenuImage);">
                            <div class="price"><h6>@item.MenuPrice.ToString("c")</h6></div>
                            <div class='info'>
                                <h1 class='title'>@item.MenuTitle</h1>
                                <p class='description'>@item.MenuSubTitle</p>
                                <div class="main-text-button">
                                    <div class="scroll-to-section">
                                        <a href="#reservation">Rezervasyon Yap <i class="fa fa-angle-down"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>